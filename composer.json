{
    "name" : "org_heigl/color",
    "type" : "Library",
    "description" : "A Library to handle Colors. This includes conversion to and from different spaces including ICC-profiles as well as modifying existing colors",
    "keywords" : ["color", "color-profile", "icc-profile", "rgb", "cmyk", "conversion", "convert", "hsl", "lab", "hsv"],
    "version" : "1.0.0",
    "homepage" : "https://github.com/heiglandreas/OrgHeiglColor",
    "time" : "2013-04-09",
    "license" : "MIT",
    "authors" : [{
        "name" : "Andreas Heigl",
        "role" : "developer",
        "email" : "andreas@heigl.org",
        "homepage" : "http://andreas.heigl.org"
    }],
    "support" : {
        "email" : "color@heigl.org",
        "issues" : "https://github.com/heiglandreas/OrgHeiglColor/issues"
    },
    "require" : {
        "php" : "^5.6 || ^7.0"
    },
    "autoload" : {
        "psr-4" : {
            "Org_Heigl\\Color\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Org_Heigl\\ColorTest\\" : "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0 || ^7.0",
        "mockery/mockery": "^1.0",
        "tm/tooly-composer-script": "^1.2"
    },
    "extra" : {
        "tools": {
            "phpcs": {
                "url": "https://api.getlatestassets.com/github/squizlabs/PHP_CodeSniffer/phpcs.phar?version=^3.2",
                "sign-url": "https://api.getlatestassets.com/github/squizlabs/PHP_CodeSniffer/phpcs.phar.asc?version=^3.2"
            },
            "security-checker": {
                "url": "http://get.sensiolabs.org/security-checker.phar",
                "force-replace": true
            }
        }
    },
    "scripts": {
        "test-junitdiff": "phpunit --color --coverage-text --coverage-clover clover.xml --log-junit junitlogs/`git rev-parse HEAD`.log",
        "buildphar" : "./createPhar.sh",
        "post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
        "post-update-cmd": "Tooly\\ScriptHandler::installPharTools",
        "cs-check": "./vendor/bin/phpcs.phar --version && ./vendor/bin/phpcs.phar",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "upload-coverage": [
            "curl -o coveralls -L https://github.com/php-coveralls/php-coveralls/releases/download/v2.0.0/php-coveralls.phar",
            "chmod 755 coveralls",
            "./coveralls -v"
        ]
    }
}
